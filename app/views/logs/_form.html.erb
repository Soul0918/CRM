<%= simple_form_for @log, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :uuid %>
  <%= error_span(@log[:uuid]) %>
  <%= f.input :major %>
  <%= error_span(@log[:major]) %>
  <%= f.input :minor %>
  <%= error_span(@log[:minor]) %>
  <%= f.input :distance %>
  <%= error_span(@log[:distance]) %>
  <%= f.input :ip %>
  <%= error_span(@log[:ip]) %>
  <%= f.input :date %>
  <%= error_span(@log[:date]) %>
  <%= f.input :time %>
  <%= error_span(@log[:time]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                logs_path, :class => 'btn btn-default' %>
<% end %>
